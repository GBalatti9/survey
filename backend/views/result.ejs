<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trivia bostera</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body <% if(result === '100%') { %>style="background-image: url('../img/festejo-la-bombonera-boca.gif'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;" <% } else {%> class="bg-body-tertiary;" <% } %> >
    <div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
        <% if(result === '100%') {%>
            <h3 class="text-warning">SE VIENE BOOOOOCA</h3>
            <video poster="../img/duka.jpeg" src="../videos/ssstik.io_1696950356631.mp4" alt="duka" style="height: 400px; width: 250px;" controls></video>
        <% } else if(result > '50%') {%>
            <h3>No está mal</h3>
            <img src="../img/almiron.png" alt="almiron" style="width: 200px; height: 200px;">
        <% } else { %>
            <h3>¿No serás gallina, no?</h3>
            <img src="../img/gallina.jpeg" alt="gallina" style="width: 200px; height: 200px;">
        <% } %>
        <p class="fs-4 text <% if(result === '100%') { %> text-warning <% } %>">Porcentaje de aciertos</p>
        <div class="circle border border-warning" style="width: 100px; height: 100px; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
            <p class="m-auto text-warning fs-4 text"><%= result %></p>
        </div>
        <% if(wrongAnswers.length > 0) {%>
            <!-- && wrongUserChoices.length > 0 -->
            <h4>Respuestas incorrectas</h4>
            <% wrongAnswers.forEach(answer => { %>
                <p class="text-danger"><%= answer.question %></p>
                <div class="container d-flex justify-content-evenly" style="max-width: 600px;">
                <p class="text-danger" style="box-sizing: border-box;">Tu respuesta: <br>
                <%= answer.userChoice %></p>
                <% answer.correctAnswer.forEach(el => { %>
                    <p class="text-success" style="box-sizing: border-box;">Respuesta correcta: <br>
                        <%= el.option %></p>
                <% }) %>
                </div>
                <% }) %>
                <!-- <%# wrongUserChoices.forEach(choice => { %>
                    <p class="text-danger"><%#= choice %></p>
            <%# }) %> -->
        <% } %>
        <a href="/">
        <input type="submit" class="btn btn-primary mt-2" value="Volver a inicio">
        </a>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

</html>